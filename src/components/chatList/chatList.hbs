<div class="chat-list">
    <div class="chat-list__search">
        <img src="search.svg" alt="Search Icon" class="chat-list__search-icon" />
        <input type="text" placeholder="Search" class="chat-list__search-input" />
    </div>
    <div class="chat-list__line"></div>
    {{#each chats}}
        <div class="chat-list__item">
            {{#if this.avatar}}
                <img src="{{this.avatar}}" alt="{{this.title}}" class="chat-image" />
            {{else}}
                <img src="gray.jpg" alt="{{this.title}}" class="chat-image" />
            {{/if}}
            <div class="chat-list__item-details">
                <div class="chat-list__item-details-header">
                    <span class="chat-list__item-details-header-name">{{this.title}}</span>
                </div>
                <div class="chat-list__item-details-message">
                    {{#if this.unread_count}}
                        <span class="unread-count">{{this.unread_count}}</span>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="chat-list__line"></div>
    {{/each}}
</div>

